<hr>
Welcome, <%= link_to @current_user.user_name, edit_user_url %>!
<%= link_to 'Home', reports_url%>
<% if @current_user.user_type == 'reporter' || @current_user.user_type == 'admin' %>
  <%= link_to 'Post', new_report_url %>
<% end %>
<%= link_to 'Logout', logout_url, :method => :delete %>

<%= form_tag(reports_url, method: 'post') do %>
  title: <%= text_field_tag 'title' %>
  <br>
  tag: <%= text_field_tag 'tags' %>
  <br>
  content:<br>
  <%= text_area_tag 'content', '', rows:35, cols:100 %>
  <br>
  <%= submit_tag 'post' %>
<% end %>
