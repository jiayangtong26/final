<hr>
Welcome, <%= @current_user.user_name %>
<%= link_to 'Home', reports_url%>
<% if @current_user.user_type == 'reporter' || @current_user.user_type == 'admin' %>
  <%= link_to 'Post', new_report_url %>
<% end %>
<%= link_to 'Logout', logout_url, :method => :delete %>

<hr>
<%= form_tag report_url(@report_old.id), method: 'patch' do %>
  title: <%= text_field_tag 'title', @report_old.title %>
  <br>
  tag: <%= text_field_tag 'tags', @tag_str %>
  <br>
  content:<br>
  <%= text_area_tag 'content', @report_old.content, rows:35, cols:100 %>
  <br>
  <%= submit_tag 'post' %>
<% end %>
